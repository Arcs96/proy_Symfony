{% extends 'RuralBundle2.html.twig' %}
{% block body %}

<!-- Main jumbotron for a primary marketing message or call to action-->
<div class="jumbotron" style="background-image :url('http://elcorreo.ae/sites/default/files/styles/940_4col_custom_user_desktop_1x/public/images/cuenca.jpg?itok=eafAP-13');">
  <div class="container">
    <h1 class="display-4"> </h1>
    <br><br>
  </div>
</div>

<!-- Nav tabs -->
<div class="container">
  <ul class="nav nav-pills mb-3 justify-content-end" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Mapa</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile">Alojamientos</a>
    </li>
    <li class="nav-item" style="margin-right:.01em;">
      <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact">Experiencias</a>
    </li>
  </ul>
</div>

<!-- Content tabs -->
<div class="container">
  <div class="tab-content" id="pills-tabContent" >
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">

      <!-- Maps Content -->
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d61397.570289791896!2d-1.8427181964148396!3d40.23785600805643!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd5d725a296ecb39%3A0xeb627290fabbbfca!2sSerran%C3%ADa+de+Cuenca!5e0!3m2!1ses!2ses!4v1509725801923" width="540" height="500" frameborder="0" style="border:0" allowfullscreen></iframe>
      <br><br><br>

    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">

      <div class="row">
        <div class="col-md-4">
          <div class="div-content" style="height:500px">
            <p>Filtro por caracteristicas del alojaminento</p>
          </div><br><br>
        </div>
        <div class="col-md-8">
          <!-- Cards Content -->
          <div class="card-columns">
            {% for alojamiento in alojamientos %}
            <div class="card">
              <!--<img class="card-img-top" src="..." alt="Card image cap">-->
              <div class="card-block">
                <h4 class="card-title">{{ alojamiento.nomAlojamiento }}</h4>
                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>

    </div>
    <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
      <!-- Other Content -->

    </div>
  </div>
</div>

{% endblock %}
